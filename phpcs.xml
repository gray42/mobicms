<?xml version="1.0"?>
<ruleset name="mobiCMS coding standard">
    <description>mobiCMS coding standard</description>

    <!-- Paths to check -->
    <file>config</file>
    <file>public</file>

    <!-- Paths to exclude -->
    <exclude-pattern>config/components/*</exclude-pattern>
    <exclude-pattern>config/modules/*</exclude-pattern>

    <!-- display progress -->
    <arg value="p"/>
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR12"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>
</ruleset>
